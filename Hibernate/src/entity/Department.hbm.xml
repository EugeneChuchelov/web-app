<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.Department" table="DEPT">
        <id name="id" column="DEPTNO" type="java.lang.Integer">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">DEPT_DEPTNO</param>
            </generator>
        </id>

        <property name="name" type="java.lang.String">
            <column name="DNAME"/>
        </property>

        <property name="loc" type="java.lang.String">
            <column name="LOC"/>
        </property>

        <set name="employees">
            <key column="DEPTNO"/>
            <one-to-many class="entity.Employee"/>
        </set>
    </class>
</hibernate-mapping>